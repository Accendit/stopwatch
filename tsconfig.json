{
    "compilerOptions": {
      "lib": [
        "dom",
        "es5",
        "es2015",
        "es2015.promise",
      ],
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5",
      "strict": true,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true
    },

    "include": [
      "src/scripts/*"
    ],

    "exclude": [
      "dist/*"
    ]
  }